{
    "IsEncrypted": false,
    "Values": {
        "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated",

        // required here because Azure Functions directly accesses this via magic and can't fetch it from appsettings.json
        "AzureWebJobsStorage": "UseDevelopmentStorage=true",

        // The below settings are optional and only for local development (disabling jobs can help reduce noise).

        // analytics jobs
        "AzureWebJobs.SyncApiRequestStatsToStorageTableManager.Disabled": false,
        "AzureWebJobs.SyncCustomEventsToStorageTableManager.Disabled": false,
        "AzureWebJobs.SyncPageViewsToStorageTableManager.Disabled": false,

        // email jobs (suggest leaving disabled unless doing email testing)
        "AzureWebJobs.SendEmail.Disabled": true,
        "AzureWebJobs.SendTemplatedEmail.Disabled": true,

        // marketing email jobs
        "AzureWebJobs.SendNewContentEmailsManager.Disabled": false,

        // notification jobs
        "AzureWebJobs.SendProjectStartedNotification.Disabled": false,
        "AzureWebJobs.SendResourceCommentCreatedNotification.Disabled": false,
        "AzureWebJobs.SendResourceAssignmentNotificationsManager.Disabled": false,

        // resource tracking jobs
        "AzureWebJobs.TrackResourceContentRequestMessageSubscriber.Disabled": false,

        // translation jobs
        "AzureWebJobs.TranslateProjectResources.Disabled": false,
        "AzureWebJobs.TranslateResource.Disabled": false
    }
}